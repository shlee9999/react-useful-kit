{
  "name": "react-useful-kit",
  "version": "1.2.0",
  "description": "Useful React components and hooks",
  "main": "dist/react-useful-kit.umd.js",
  "module": "dist/react-useful-kit.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/react-useful-kit.css",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "modal",
    "hooks",
    "components",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shlee9999/react-useful-kit.git"
  },
  "author": "shlee9999 <oklshop555@gmail.com>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build:lib",
    "check-branch": "git branch --show-current | findstr /C:\"master\" >nul || (echo Error: This command can only be run on master branch && exit 1)",
    "publish:patch": "npm run check-branch && npm version patch && npm publish && git push --follow-tags",
    "publish:minor": "npm run check-branch && npm version minor && npm publish && git push --follow-tags",
    "publish:major": "npm run check-branch && npm version major && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "install": "^0.13.0",
    "npm": "^11.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
